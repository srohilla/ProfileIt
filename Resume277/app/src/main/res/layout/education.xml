<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">


<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"

        card_view:cardCornerRadius="4dp"

        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"

                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"

                android:id="@+id/sjsu"
                android:background="@drawable/sjsu1"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:id="@+id/school1"
                android:layout_toRightOf="@+id/sjsu"
                android:text="SJSU"
                android:textColor="#1F388D" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description1"
                android:text="Masters"
                android:layout_below="@+id/school1"
                android:layout_toEndOf="@+id/sjsu"
                android:layout_marginTop="16dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"

        card_view:cardCornerRadius="4dp"

        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"

                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"

                android:id="@+id/niec"
                android:background="@drawable/nieccampus"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/school2"
                android:layout_toRightOf="@+id/niec"
                android:textStyle="bold"


                android:text="Northern India Engineering College"
                android:textColor="#1F388D" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description2"
                android:text="Bachelors of technology"
                android:layout_below="@+id/school2"
                android:layout_toEndOf="@+id/niec"
                android:layout_marginTop="12dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"

        card_view:cardCornerRadius="4dp"

        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"

                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"

                android:id="@+id/qms"
                android:background="@drawable/qms"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/school3"
                android:layout_toRightOf="@+id/qms"
                android:textStyle="bold"

                android:text="Queen Mary's School"
                android:textColor="#1F388D" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description3"
                android:text="HIgh School"
                android:layout_below="@+id/school3"
                android:layout_toEndOf="@+id/qms"
                android:layout_marginTop="12dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>